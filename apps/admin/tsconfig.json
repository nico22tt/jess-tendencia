{
  "extends": "@jess/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",                      // Asegura rutas absolutas
    "paths": {
      "@/*": ["./*"],                    // Archivos locales en la app
      "@jess/ui/*": ["../../packages/ui/*"],           // Tu UI compartida
      "@jess/shared/*": ["../../packages/shared/*"],   // Tu paquete compartido general
      "@utils/*": ["../../packages/shared/utils/*"],   // Tus utilidades Supabase y m√°s
      "@lib/*": ["../../packages/shared/lib/*"]        // Acceso directo a shared/lib
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
