{
  "extends": "next",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@jess/ui/*": ["../../packages/ui/*"],
      "@jess/shared/*": ["../../packages/shared/*"],
      "@utils/*": ["../../packages/shared/utils/*"],
      "@lib/*": ["../../packages/shared/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
