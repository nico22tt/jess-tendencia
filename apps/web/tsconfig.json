{
  "extends": "@jess/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",                               // Habilita rutas absolutas base
    "paths": {
      "@/*": ["./*"],                             // Archivos locales en la app web
      "@jess/ui/*": ["../../packages/ui/*"],      // UI components compartidos
      "@jess/shared/*": ["../../packages/shared/*"], // Paquete compartido general
      "@utils/*": ["../../packages/shared/utils/*"], // Utilidades Supabase/globales
      "@lib/*": ["../../packages/shared/lib/*"]      // Librer√≠as o helpers compartidos
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
